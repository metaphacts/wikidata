          </mp-resource-link-container>
          <mp-resource-link-container propagate-link="true" iri='http://www.metaphacts.com/resource/assets/Vocabularies'>
            <bs-menu-item>Vocabularies</bs-menu-item>
          </mp-resource-link-container>
          <mp-resource-link-container propagate-link="true" iri='http://www.metaphacts.com/resource/assets/Ontologies'>
