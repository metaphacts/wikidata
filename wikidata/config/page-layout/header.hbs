          <mp-resource-link-container propagate-link="true" iri='http://www.metaphacts.com/resource/assets/'>
            <bs-menu-item>All Assets</bs-menu-item>
          </mp-resource-link-container>
          <bs-menu-item divider='true'></bs-menu-item>
