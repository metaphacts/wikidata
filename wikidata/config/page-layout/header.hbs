  <bs-navbar-header class='navbar-logo-name'>
    <div class='navbar-logo'>
      <bs-navbar-brand>
        <a href='/'>
          <img src="/images/logo.svg" alt="metaphacts" />
        </a>
      </bs-navbar-brand>
    </div>
    <div class='navbar-name'>
      <bs-navbar-brand>
        <a href='/'>
